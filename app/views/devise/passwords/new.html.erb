<div class="m-5">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :email, class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user_email",  placeholder: "Enter email" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>