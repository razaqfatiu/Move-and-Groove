<div class="m-5 signup">
<h2 class="text-center m-5">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :email, class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "user_email",  placeholder: "Enter email" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "user_password" %>
    </div>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-2 col-form-label" %><br />
    <div class="col-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control", id: "user_password_confirm" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success" %>
  </div>
<% end %>

<p class="btn btn-outline-warning m-2"><%= render "devise/shared/links" %></p>
</div>