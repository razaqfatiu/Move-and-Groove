
<%= form_with(model: activity_record, local: true) do |form| %>
<div class="form-horizontal form-div">

  <% if activity_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity_record.errors.count, "error") %> prohibited this activity_record from being saved:</h2>

      <ul>
        <% activity_record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group row">
    <%= form.label :activity_id, class: "col-2 col-form-label" %>
    <div class="col-8">
        <%= form.select :activity_id, activities.map { |activity| [activity.value, activity.id] }, {}, { class: "form-control" } %>
          
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :Date, class: "col-2 col-form-label" %><br />
    <div class="col-8">
      <%= form.date_field :Date, class: "form-control", placeholder: "DD-MM-YYYY" %>
    </div>
  </div>
 
  <div class="form-group row">
    <%= form.label :duration, class: "col-2 col-form-label" %><br />
    <div class="col-8">
      <%= form.time_field :duration, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :comment, class: "col-2 col-form-label" %><br />
    <div class="col-8">
      <%= form.text_area :comment, class: "form-control", :rows => 5 %>
    </div>
  </div>

  <div class="actions text-center mt-4">
    <%= form.submit class: "btn btn-success" %>
  </div>
  </div>
<% end %>

